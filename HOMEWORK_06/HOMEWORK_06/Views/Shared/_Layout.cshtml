<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HOMEWORK_06.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/mdbootstrap@4.18.0/dist/css/mdb.min.css" integrity="sha384-bJF0f5qQv02k88JSBhlYgyQe5GzGG4GQeOsASe78ptNwAKI8fHaDzAxiqYukVhHP" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>@ViewData["Title"] </title>
</head>
<body>
   
    <div class="slide" style="margin-top:2rem;">

        <center><img class="w3-image" align-items-center" src="https://roijang.com/wp-content/uploads/2022/09/%E0%B8%97%E0%B8%B5%E0%B9%88%E0%B9%80%E0%B8%97%E0%B8%B5%E0%B9%88%E0%B8%A2%E0%B8%A7%E0%B8%9B%E0%B8%B2%E0%B8%A2.jpg" alt="" width="1210px;" height="450px;"></center>

    </div>


    <ul class="TextTitle" style="margin-top:2rem;" >
        <li><a asp-controller="Home" asp-action="Index"      style="text-decoration: none;"><span> หน้าหลัก </span></a></li>
        <li><a asp-controller="Home" asp-action="Product"    style="text-decoration: none;"><span> สถานที่พักพิง </span></a></li>
        <li><a asp-controller="Home" asp-action="commend"    style="text-decoration: none;"><span> อาหารที่แนะนำ </span></a></li>
        <li><a asp-controller="Home" asp-action="ALLProduct" style="text-decoration: none;"><span> สินค้า </span></a></li>
        
    </ul>

    <hr style="color:burlywood; padding:3px;" />
    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>



    <footer class=" text-center  ">
        <!-- Grid container -->
    
         
           
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2020 Copyright:
            <a class="text-reset fw-bold" href="https://mdbootstrap.com/">MDBootstrap.com</a>
        </div>
        <!-- Copyright -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

