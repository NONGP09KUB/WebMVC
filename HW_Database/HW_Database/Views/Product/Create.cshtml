@model Student
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">บันทึกข้อมูล</h1>
<hr />

<form method="POST" asp-controller="Product" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-control" />
        <span   asp-validation-for="Score" class="text-danger"></span>
    </div>
    <center><button type="summit" class="btn-outline-danger m-2">บันทึก</button></center>
</form>